# ====================================================================
# WebSecScan Platform 環境配置文件範例
# 請複製此文件為 .env 並修改相應的值
# ====================================================================

# 應用程式環境
NODE_ENV=development
PORT=8080

# 資料庫配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=websec_db
DB_USER=websec_user
DB_PASSWORD=websec_password
DB_SSL=false

# MongoDB 配置（掃描結果存儲）
MONGODB_URI=mongodb://localhost:27017/websec_scans
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Redis 配置（緩存和任務佇列）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# JWT 安全配置
JWT_SECRET=your-super-secret-jwt-key-please-change-this-in-production-123456789
JWT_REFRESH_SECRET=your-super-secret-refresh-key-please-change-this-in-production-987654321
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# 加密密鑰（32字符）
ENCRYPTION_KEY=your-32-character-encryption-key-here123456

# 前端配置
REACT_APP_API_URL=http://localhost:8080/api/v1
REACT_APP_WEBSOCKET_URL=ws://localhost:8080
FRONTEND_URL=http://localhost:3000

# 郵件服務配置
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@websec-platform.com
EMAIL_PASSWORD=your-email-app-password
EMAIL_FROM="WebSecScan <noreply@websec-platform.com>"

# 檔案上傳配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,docx,txt,csv,json

# 掃描引擎配置
SCANNER_MAX_WORKERS=5
SCANNER_TIMEOUT=3600
SCANNER_MAX_CONCURRENT_SCANS=10
SCANNER_RATE_LIMIT=10

# 報告配置
REPORT_RETENTION_DAYS=90
REPORT_MAX_SIZE=52428800
REPORT_STORAGE_PATH=./reports

# 安全配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800
SESSION_TIMEOUT=86400

# SSL/TLS 配置
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
FORCE_HTTPS=false

# 監控和日誌
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# 外部服務整合
JIRA_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#security-alerts

# Prometheus 監控
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091

# 開發環境配置
DEBUG=websec:*
SEED_DATABASE=false
MOCK_EXTERNAL_SERVICES=false

# 生產環境配置
CLUSTER_MODE=false
CLUSTER_WORKERS=4
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# 備份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# 快取配置
CACHE_TTL=3600
CACHE_MAX_KEYS=10000

# API 限制配置
API_RATE_LIMIT=1000
API_RATE_WINDOW=900000
API_MAX_REQUESTS_PER_IP=100

# WebSocket 配置
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=1000

# 合規性設定
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555

# 第三方服務 API 金鑰
VIRUSTOTAL_API_KEY=
SHODAN_API_KEY=
HAVE_I_BEEN_PWNED_API_KEY=

# 容器化配置
DOCKER_REGISTRY=
DOCKER_USERNAME=
DOCKER_PASSWORD=

# 健康檢查配置
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# 效能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# 國際化配置
DEFAULT_LOCALE=zh-TW
SUPPORTED_LOCALES=zh-TW,zh-CN,en-US,ja-JP

# 功能開關
FEATURE_MFA_ENABLED=true
FEATURE_API_SCANNING=true
FEATURE_COMPLIANCE_REPORTS=true
FEATURE_INTEGRATIONS=true
FEATURE_ADVANCED_REPORTING=true